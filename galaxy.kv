MainWidget:
#:import menu menu

<MainWidget>:

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "images/bg1.jpg"

    #creation d'un object property'
    menu_widget: menu_widget

    perspective_point_x: self.width/2
    perspective_point_y: self.height*0.75

    MenuWidget:
        id: menu_widget

    Label:
        text: root.score_text
        font_name: "fonts/Eurostile.ttf"
        font_size: dp(30)
        pos_hint: {"x":0, "top":1}
        size_hint: .18, .18